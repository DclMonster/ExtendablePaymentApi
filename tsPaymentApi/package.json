{
  "name": "@dclmonster/ts-payment-api",
  "version": "0.1.0",
  "description": "TypeScript Payment API with multiple payment providers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage benchmark-results.json",
    "prebuild": "npm run clean",

    "test": "jest",
    "test:unit": "jest --testPathPattern=/__tests__/unit/ --coverage",
    "test:integration": "jest --testPathPattern=/__tests__/integration/",
    "test:regression": "jest --testPathPattern=/__tests__/regression/",
    "test:performance": "jest --config=jest.bench.config.js --testPathPattern=/__tests__/performance/",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:regression && npm run test:performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",

    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,yml,yaml,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,yml,yaml,md}\"",
    "spell-check": "cspell \"**/*.{ts,tsx,json,yml,yaml,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run format:check && npm run spell-check && npm run type-check && npm run docs:coverage",

    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx serve docs",
    "docs:publish": "npm run docs && gh-pages -d docs",
    "docs:wiki": "typedoc --plugin typedoc-plugin-markdown --out wiki-docs && node scripts/publish-wiki.js",
    "docs:coverage": "ts-doc-coverage src --badge-output docs/_static/doc_coverage_badge.svg --html-output docs/docstring_coverage",
    "docs:all": "npm run docs:publish && npm run docs:wiki && npm run docs:coverage",

    "prepare": "npm run build",
    "prepublishOnly": "npm run validate && npm run test:all",
    "preversion": "npm run validate",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",

    "benchmark": "npm run test:performance",
    "benchmark:compare": "npm run test:performance -- --benchmark-compare",
    "benchmark:save": "npm run test:performance -- --benchmark-save",

    "ci:validate": "npm run validate",
    "ci:test": "npm run test:all",
    "ci:coverage": "npm run test:coverage",
    "ci:docs": "npm run docs:all",
    "ci:benchmark": "npm run benchmark",

    "precommit": "npm run validate",
    "prepush": "npm run test:unit",

    "docker:build": "docker build -t extendable-payment-api .",
    "docker:run": "docker run -p 3000:3000 extendable-payment-api",

    "db:migrate": "ts-node scripts/migrate.ts",
    "db:seed": "ts-node scripts/seed.ts",
    "db:reset": "ts-node scripts/reset.ts",

    "release:major": "npm version major && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:patch": "npm version patch && npm publish"
  },
  "keywords": [
    "payment",
    "api",
    "typescript",
    "paypal",
    "stripe",
    "coinbase",
    "google-pay",
    "apple-pay"
  ],
  "author": "Exodus <dev@exodus.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DclMonster/ExtendablePaymentApi.git"
  },
  "bugs": {
    "url": "https://github.com/DclMonster/ExtendablePaymentApi/issues"
  },
  "homepage": "https://github.com/DclMonster/ExtendablePaymentApi#readme",
  "dependencies": {
    "@types/mongodb": "^4.0.7",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-restful": "^1.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^6.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cspell": "^8.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.5.0",
    "jest-bench": "^29.5.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.0.0",
    "gh-pages": "^6.1.0",
    "simple-git": "^3.22.0",
    "ts-doc-coverage": "^1.0.0",
    "typedoc-plugin-coverage": "^2.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
